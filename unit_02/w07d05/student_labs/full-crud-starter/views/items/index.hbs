// SHOW STUDENT
<div>
  <a href="/users/{{user.id}}/items">See Items</a>
</div>


// INDEX ITEMS
<ul>
  {{#each items}}
    <li>{{this.name}}</li>
    <div>
      <form action="/users/{{../user.id}}/items/{{this.id}}?_method=DELETE" method="POST">
        <input type="submit" value="Delete Item"/>
      </form>
    </div>
    <br/>
  {{/each}}
</ul>